<section class="p-4 p-md-5" style="
    background-image: url(https://mdbcdn.b-cdn.net/img/Photos/Others/background3.webp);
  ">
  <div class="row d-flex justify-content-center">
    <div class="col-md-10 col-lg-8 col-xl-5">
      <div class="card rounded-3" style="width:120%;">
        <div class="card-body p-4" >
            <p class="fw-bold mb-4">proceed to checkout:</p>
            <%= form_with url: '/charge', method: :post  do |f| %>
            <div class="row mb-4">
              <div class="col-7">
                <div class="form-outline">
                    <%=f.text_field :card_number, class: "form-control form-control-lg"%>
                    <%=f.label :card_number, "Card_number",class:"form-label"%>
                </div>
              </div>
              <div class="col-3">
                <div class="form-outline">
                    <%=f.text_field :exp, class: "form-control form-control-lg"%>
                  <%=f.label :card_number, "Expire",class:"form-label"%>
                </div>
              </div>
              <div class="col-2">
                <div class="form-outline">
                    <%=f.text_field :cvv, class:"form-control form-control-lg"%>
                    <%=f.label :cvv, class: "form-label" %>
                </div>
              </div>
            </div>
            <%=f.submit "continue", class:"btn btn-info"%>
        </div>
      </div>
    </div>
  </div>
</section>
<%end%>